{
  "name": "clawproject-ops-ui",
  "version": "0.1.0",
  "description": "Express + SQLite operational monitor UI for OpenClaw Gateway",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danyanovich/clawproject.git"
  },
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
