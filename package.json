{
  "name": "openclaw-list",
  "version": "0.01.0",
  "description": "Express + SQLite operational monitor UI for OpenClaw Gateway â€” OpenClwList",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danyanovich/OpenClwList.git"
  },
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "next build",
    "start": "cross-env NODE_ENV=production node --import tsx src/server.ts",
    "doctor": "node scripts/doctor.mjs",
    "run:local": "bash scripts/run-local.sh",
    "run:remote": "bash scripts/run-remote.sh",
    "clean:local": "bash scripts/clean-local.sh",
    "clean:local:db": "bash scripts/clean-local.sh --vacuum-db",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "check": "npm run typecheck && npm run lint",
    "smoke": "bash scripts/smoke.sh",
    "service:start": "bash scripts/manage.sh start",
    "service:stop": "bash scripts/manage.sh stop",
    "service:status": "bash scripts/manage.sh status",
    "service:logs": "bash scripts/manage.sh logs"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "cron-parser": "^5.5.0",
    "express": "^5.2.1",
    "json5": "^2.2.3",
    "jszip": "^3.10.1",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.5.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.35.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
