  "dependencies": {
    "express": "^5.2.1",
    "json5": "^2.2.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.35.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
