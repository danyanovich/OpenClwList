# ops-ui mode
# local  - dashboard and OpenClaw on the same machine (default)
# remote - dashboard is published via reverse proxy, auth enabled by default
OPS_UI_MODE=local

# ops-ui bind (legacy HOST/PORT still supported)
OPS_UI_PORT=3010
PORT=3010
# Use 127.0.0.1 for secure local-only access (e.g. at a cafe)
# Use 0.0.0.0 to allow access from other devices on your local network
OPS_UI_HOST=127.0.0.1
HOST=127.0.0.1

# Reverse proxy / security
# Set true when running behind Caddy/Nginx and you rely on X-Forwarded-* headers
OPS_UI_TRUST_PROXY=false
# Defaults: false in local mode, true in remote mode
# OPS_UI_AUTH_ENABLED=true
# Required when OPS_UI_AUTH_ENABLED=true
# OPS_UI_BEARER_TOKEN=replace_with_long_random_token
# In remote mode dangerous actions are disabled by default unless explicitly enabled
OPS_UI_REMOTE_ALLOW_DANGEROUS_ACTIONS=false

# gateway endpoint
CLAWDBOT_URL=ws://127.0.0.1:18789

# Optional multi-host config (JSON array). If set, overrides CLAWDBOT_URL fallback.
# OPS_UI_DEFAULT_HOST_ID=local
# OPS_UI_HOSTS_JSON=[{"id":"local","name":"Local OpenClaw","gatewayUrl":"ws://127.0.0.1:18789","gatewayTokenEnv":"CLAWDBOT_API_TOKEN","enabled":true}]

# auth (choose one)
# CLAWDBOT_API_TOKEN=replace_me
# OPENCLAW_CONFIG_PATH=/Users/you/.openclaw/openclaw.json

# optional database path
# OPS_UI_DB_PATH=./data/ops-ui.sqlite
